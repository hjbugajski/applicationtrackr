{
  "name": "applicationtrackr",
  "version": "2.0.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint; npm run stylelint",
    "prepare": "husky",
    "prettier:check": "npx prettier --ignore-path .gitignore --check .",
    "prettier:write": "npx prettier --ignore-path .gitignore --write .",
    "stylelint": "npx stylelint '**/*.scss' --ignore-path .gitignore",
    "stylelint:fix": "npx stylelint '**/*.scss' --ignore-path .gitignore --fix",
    "bump": "bump ./src/app/settings/about/about.component.html",
    "bump:patch": "bump patch ./src/app/settings/about/about.component.html",
    "bump:minor": "bump minor ./src/app/settings/about/about.component.html",
    "bump:major": "bump major ./src/app/settings/about/about.component.html",
    "release:custom": "commit-and-tag-version -s --release-as",
    "release:patch": "commit-and-tag-version -s --release-as patch",
    "release:minor": "commit-and-tag-version -s --release-as minor",
    "release:major": "commit-and-tag-version -s --release-as major",
    "prerelease:custom": "npm run bump",
    "prerelease:patch": "npm run bump:patch",
    "prerelease:minor": "npm run bump:minor",
    "prerelease:major": "npm run bump:major"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.13",
    "@angular/cdk": "^18.2.14",
    "@angular/common": "^18.2.13",
    "@angular/compiler": "^18.2.13",
    "@angular/core": "^18.2.13",
    "@angular/fire": "^18.0.1",
    "@angular/forms": "^18.2.13",
    "@angular/material": "^18.2.14",
    "@angular/platform-browser": "^18.2.13",
    "@angular/platform-browser-dynamic": "^18.2.13",
    "@angular/router": "^18.2.13",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.12",
    "@angular-eslint/builder": "^18.4.3",
    "@angular-eslint/eslint-plugin": "^18.4.3",
    "@angular-eslint/eslint-plugin-template": "^18.4.3",
    "@angular-eslint/schematics": "^18.4.3",
    "@angular-eslint/template-parser": "^18.4.3",
    "@angular/cli": "^18.2.12",
    "@angular/compiler-cli": "^18.2.13",
    "@types/jasmine": "~5.1.4",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "commit-and-tag-version": "^12.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jasmine-core": "~5.1.2",
    "karma": "~6.4.3",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-clean-order": "^5.4.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "typescript": "~5.5.4",
    "version-bump-prompt": "^6.1.0"
  },
  "commit-and-tag-version": {
    "scripts": {
      "postcommit": "git add .; git commit --amend --no-edit;"
    }
  }
}
